                    </MudItem>
                    <MudDivider Class="divider-class"/>
                    
                    <MudItem Class="py-5">
                        <MudText Typo="Typo.h5">Alter:</MudText>
                        <MudText Style="max-width: 100%">
                            @(_model.DataList.FirstOrDefault(x => x.Name == "CHAR_AGE")?.Data ?? "Keine Daten")
                        </MudText>
                    </MudItem>
                    <MudDivider Class="divider-class"/>

