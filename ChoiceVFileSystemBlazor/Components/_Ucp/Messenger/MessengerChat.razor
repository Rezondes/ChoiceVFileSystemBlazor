@page "/u/messenger"

@using ChoiceVFileSystemBlazor.Components._Ucp.Messenger.Components

@code {
    public const string Url = "/u/messenger";
    public static string GetRedirectUrl() => Url;
}

<ChatComponent @ref="ChatComponent" LoadedForUcp="true" />

@code {
    private ChatComponent ChatComponent;
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        await ChatComponent.Load();
    }
}