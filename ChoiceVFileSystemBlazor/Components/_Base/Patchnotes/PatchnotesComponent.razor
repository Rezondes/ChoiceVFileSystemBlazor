        <MudText Typo="Typo.h5">Patchnotes</MudText>

        <MudExpansionPanels MultiExpansion="true">
            @foreach (var patchnote in _patchnotes.OrderDescending())
            {
                <MudExpansionPanel Text="@patchnote.Item1">
                    <PatchnotesItem Content="@patchnote.Item2"/>
                </MudExpansionPanel>
            }
        </MudExpansionPanels>
    </MudPaper>
</MudItem>

